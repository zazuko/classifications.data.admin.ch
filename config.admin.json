{
  "baseConfig": "trifid:config-sparql.json",
  "sparqlEndpointUrl": "https://lindasprd.netrics.ch:8443/annex/lindas/sparql/query",
  "sparqlProxy": {
    "options": {
      "queryOperation": "postQueryUrlencoded",
      "authentication": {
        "user": "public",
        "password": "public"
      }
    }
  },
  "staticFiles": {
    "rendererFiles": {
      "path": "/",
      "folder": "renderer:public"
    },
    "dataadminFiles": {
      "path": "/",
      "folder": "cwd:public"
    },
    "styleFiles": {
      "path": "/",
      "folder": "cwd:node_modules/swiss-styleguide/build"
    },
    "zackFiles": {
      "path": "/search/",
      "folder":  "cwd:node_modules/zack-search/dist"
    }
  },
  "handler": {
    "options": {
      "authentication": {
        "user": "public",
        "password": "public"
      },
      "resourceExistsQuery": "ASK { GRAPH ?g { <${iri}> ?p ?o }}",
      "resourceGraphQuery": "DESCRIBE <${iri}>"
    }
  },
  "renderer": {
    "module": "trifid-renderer-simple",
    "template": "cwd:data/template.html",
    "templateError": "cwd:data/error.html",
    "vocab": "renderer:vocab.json"
  },
  "yasgui": {
    "options": {
      "template": "cwd:data/yasgui.html",
      "map": "chmaps"
    }
  }
}
